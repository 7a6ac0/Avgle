<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/video_image"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="@dimen/list_item_padding"
        android:layout_marginLeft="@dimen/list_item_padding"
        android:layout_marginRight="@dimen/list_item_padding"
        android:layout_marginTop="@dimen/list_item_padding"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/video_hd_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/video_image"
        android:layout_alignRight="@+id/video_image"
        android:layout_alignTop="@+id/video_image"
        android:layout_gravity="bottom|center"
        android:padding="5dp"
        android:text="@string/video_hd"
        android:textAlignment="center"
        android:textColor="?android:attr/colorPressedHighlight"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/video_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_image"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/list_item_padding"
        android:layout_marginRight="@dimen/list_item_padding"
        android:ellipsize="end"
        android:singleLine="true" />

    <ToggleButton
        android:id="@+id/video_favorite_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/video_title"
        android:layout_below="@+id/video_title"
        android:background="@drawable/button_favorite"
        android:checked="false"
        android:text=""
        android:textOff=""
        android:textOn="" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/video_title"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/video_title"
        android:layout_marginBottom="11dp"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/video_viewnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="views" />
    </LinearLayout>


</RelativeLayout>